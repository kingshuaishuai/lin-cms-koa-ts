{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "noImplicitAny": false,
    "declaration": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "importHelpers": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
  },
  "exclude": [
    "node_modules",
    "app/**/__test__"
  ],
  "include": ["app"]
}